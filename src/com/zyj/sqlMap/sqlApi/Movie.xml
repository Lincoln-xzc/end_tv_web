    </if>
  </select>
  
    <select id="selectPage" resultType="int"  parameterType="java.util.HashMap" >
    select count(*) c from movie where 1=1
    <if test="type != null" >
    and type = #{type}
    </if>
  </select>
  
  
   <select id="selectByName" resultType="Movie" parameterType="java.util.HashMap" >
